@inherits System.Web.Mvc.WebViewPage<DotNetSitemap.Core.Models.SitemapXml>
<?xml version="1.0" encoding="UTF-8" ?>
@if (Model.UrlSet != null)
{
    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
        @foreach (var url in Model.UrlSet.Urls)
        {
            <url>
                <loc>@url.Loc</loc>
                @if (url.LastMod != null)
                {
                    <lastmod>@($"{url.LastMod:yyyy-MM-dd}")</lastmod>
                }
                @if (url.ChangeFreq != null)
                {
                    <changefreq>@url.ChangeFreq.ToString()</changefreq>
                }
                @if (url.Priority != null)
                {
                    <priority>@url.Priority</priority>
                }

            </url>
        }
    </urlset>
}
